#include <practica2V2.h>
short estadoSensor;
int16 timer=0;
int16 segundo=0;

#INT_RTCC
void interrupcionTimer0(){
   set_timer0(131);
   timer++;
   if (timer==8000){
      output_toggle(PIN_B2);
      segundo++;
      timer=0;
   }
}

#INT_RB
void interrupcionPuertoB(){
   estadoSensor=input(PIN_B4);
   if (estadoSensor==0){
      output_high(PIN_B1);
      if (segundo !=0 ){
         printf("Estado = Bloqueado, Duracion : %Ld Segundos \n\r " , segundo);
         segundo=0;
      } 
   } else{
      output_low(PIN_B1);
      if (segundo != 0){
         printf("Estado = Desbloqueado, Duracion : %Ld Segundos \n\r" , segundo);
      }
   }
   
}

void main()
{
   set_tris_a(0x01);
   set_tris_b(0x10);
   set_tris_c(0x00);
   output_a(0x00);
   output_b(0x00);
   output_c(0x00);
   ENABLE_INTERRUPTS(INT_RB);
   ENABLE_INTERRUPTS(INT_RTCC);
   ENABLE_INTERRUPTS(GLOBAL);
   setup_timer_0(RTCC_INTERNAL | RTCC_DIV_1);
   set_timer0(131);
   
   while(TRUE)
   {
      //TODO: User Code
      
   }

}
